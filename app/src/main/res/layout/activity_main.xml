<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_iv_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/sea_green"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_activity_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tea_green"
        android:contentDescription="@string/content_desc"
        app:srcCompat="@drawable/ic_comment" />

    <TextView
        android:id="@+id/main_activity_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/Placholder"
        android:textAlignment="center"
        android:textColor="#455A64"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/activity_main_et_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_your_name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#424242"
        android:textSize="24sp" />

    <Button
        android:id="@+id/activity_main_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tea_green"
        android:text="@string/update"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:ignore="TextContrastCheck" />
</LinearLayout>